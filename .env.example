# General
ENV=development
BASE_PUBLIC_URL=http://localhost:8000
SECRET_KEY=change_this_to_random_secret_string
LOG_LEVEL=INFO
LOG_FORMAT=json
DB_PATH=daily_agent.db
ALLOWED_HOSTS=*
CORS_ORIGINS=

# Scheduler (Europe/Amsterdam time)
SCHEDULE_HOUR=9
SCHEDULE_MINUTE=0
TIMEZONE=Europe/Amsterdam

# Authentication (Optional Basic Auth)
BASIC_AUTH_USER=admin
BASIC_AUTH_PASS=secret

# Data Collection
GIT_REPO_PATH=.
DEVLOG_PATH=devlog.md
# Comma separated sensitive words
SENSITIVE_WORDS=password,secret,token,api_key,client_secret

# LLM (OpenRouter)
OPENROUTER_API_KEY=sk-or-your-key
OPENROUTER_MODEL=openai/gpt-4o-mini
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# Twitter / X API
TWITTER_API_KEY=your_api_key
TWITTER_API_SECRET=your_api_secret
TWITTER_ACCESS_TOKEN=your_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret
DRY_RUN=true

# Observability
METRICS_ENABLED=true
METRICS_PATH=/metrics
METRICS_INCLUDE_DB=true
OTEL_ENABLED=false
OTEL_SERVICE_NAME=daily-x-agent
OTEL_EXPORTER_OTLP_ENDPOINT=
OTEL_EXPORTER_OTLP_HEADERS=
OTEL_TRACES_SAMPLER_RATIO=0.1

# Email (SendGrid / SMTP)
# Provider: sendgrid or smtp
EMAIL_PROVIDER=smtp
SENDGRID_API_KEY=your_sendgrid_key
SMTP_SERVER=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=daily-agent@example.com
EMAIL_TO=me@example.com

# WhatsApp (Twilio - Optional)
ENABLE_WHATSAPP=false
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=whatsapp:+14155238886
TWILIO_TO_NUMBER=whatsapp:+1234567890
